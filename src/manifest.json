{
  "name": "Quak Vim",
  "description": "Supercharge Chrome with commands, shortcuts, and more",
  "offline_enabled": true,
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "images/*", "main.js", "*.js", "_favicon/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "browsingData",
    "history",
    "scripting",
    "search",
    "favicon"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://gstatic.com/*",
    "*://*/*"
  ]
}
